<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>zip</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/classes</directory>
			<outputDirectory>./</outputDirectory>
		</fileSet>
	</fileSets>
    <!-- This is added to make the package process add to the zip file the necessary libraries.
    This process is useful when distributing the .zip file for users to install the plugin.-->
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<excludes>
				<exclude>com.visualparadigm.app:*:*</exclude>
                <exclude>org.ontouml.vp:ontouml-vp-plugin:*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>